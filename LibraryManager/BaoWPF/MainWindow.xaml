<Window x:Class="BaoWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BaoWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Background="#FF2C3E50" Grid.Column="0">
            <TextBlock Text="MENU" Foreground="White" FontSize="18" FontWeight="Bold" Margin="10"/>
            <Button x:Name="btnRooms" Content="Room Management" Margin="10" Click="btnRooms_Click"/>
            <Button x:Name="btnCustomers" Content="Customer Management" Margin="10" Click="btnCustomers_Click"/>
            <Button x:Name="btnBookings" Content="Booking Management / History" Margin="10" Click="btnBookings_Click"/>
            <Button x:Name="btnReport" Content="Report" Margin="10" Click="btnReport_Click"/>
            <Button x:Name="btnProfile" Content="Your Profile" Margin="10" Click="btnProfile_Click"/>
            <Button x:Name="btnLogout" Content="Logout" Margin="10" Click="btnLogout_Click"/>
        </StackPanel>

        <ContentControl x:Name="MainContent" Grid.Column="1"/>
    </Grid>
</Window>
