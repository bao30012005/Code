<UserControl x:Class="BaoWPF.BookingHistoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="dgHistory" AutoGenerateColumns="False" SelectionMode="Single"
                  IsReadOnly="True" Grid.Row="0" Margin="0,0,0,10"
                  SelectionChanged="dgHistory_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding BookingReservationId}" Width="60"/>
                <DataGridTextColumn Header="Date" Binding="{Binding BookingDate}" Width="100"/>
                <DataGridTextColumn Header="Total" Binding="{Binding TotalPrice}" Width="100"/>
                <DataGridTextColumn Header="Status" Binding="{Binding BookingStatus}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <GroupBox Header="Booking Details" Grid.Row="1">
            <DataGrid x:Name="dgDetail" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Room" Binding="{Binding Room.RoomNumber}" Width="100"/>
                    <DataGridTextColumn Header="Start" Binding="{Binding StartDate}" Width="100"/>
                    <DataGridTextColumn Header="End" Binding="{Binding EndDate}" Width="100"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding ActualPrice}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</UserControl>