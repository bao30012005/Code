<UserControl x:Class="BaoWPF.ProfileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Your Profile" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <Label Content="Full Name:"/>
            <TextBox x:Name="txtName"/>

            <Label Content="Phone:"/>
            <TextBox x:Name="txtPhone"/>

            <Label Content="Birthday:"/>
            <DatePicker x:Name="dpBirthday"/>

            <Label Content="Password:"/>
            <PasswordBox x:Name="txtPassword"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,20,0,0" HorizontalAlignment="Center">
            <Button Content="Update Info" Width="120" Margin="10" Click="btnUpdate_Click"/>
            <Button Content="Delete Account" Width="120" Margin="10" Click="btnDelete_Click"/>
        </StackPanel>
    </Grid>
</UserControl>